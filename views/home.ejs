<center>
<h1>Codeal home!</h1>
<% if(locals.user){%>
<section id="feed-posts">
    <h4>Posts</h4>
    <form action="/posts/create" method="POST" id="new-post-form">
       <textarea name="content" cols="30" rows="3" placeholder="Type Here..."></textarea><br><br>
       <input type="submit" value="Post">
   </form>
   <h4>Comments</h4>
    <form action="/posts/comment" method="POST" id="new-comment">
       <textarea name="content" cols="30" rows="3" placeholder="Type Here..."></textarea><br><br>
       <input type="submit" value="Add Comment">
   </form>    
</section>
  <%}%>  
    <div id="posts-list" style="width:15%; height:50px;">
         <ul>
                <% for(let i of posts){%>
                    <li>
                       <p><%= i.content %></p>
                       <p><%= i.user.name %></p>
                    </li>
                <%} %>
         </ul>

    </div>
   

</center>