<h1>Codeal home!</h1>

<section id="feed-posts">
    <% if(locals.user){%>
    <h4>Posts</h4>
    <form action="/posts/create" method="POST" id="new-post-form">
       <textarea name="content" cols="30" rows="3" placeholder="Type Here..." required></textarea><br><br>
       <input type="submit" value="Post">
   </form> 
   <%}%>   
</section>
<section>
    <div id="posts-list" style="width:15%; height:50px; display: block;">
         <ul>
                <% for(post of posts){%>

                    <%- include('_post') -%>
                
                <%} %>
         </ul>
    </div>
</section>  

<section id="user-friends" style="display:block;">
      <h4>Friends</h4>
      <% for(u of all_users){%>
           <p>
             <a href="/users/profile/<%= u.id %>"><%= u.name %></a>
           </p>
           <%}%>
</section>
